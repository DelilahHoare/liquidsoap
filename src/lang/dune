(env
 (dev
  (flags
   (:standard -w -7-9 -warn-error -33))))

(include_subdirs unqualified)

(menhir
 (modules parser json_parser))

(rule
 (target build_config.ml)
 (action
  (with-stdout-to %{target}
    (echo "let version = \"%{version:liquidsoap-lang}\"\n
           let ext_exe = \"%{ocaml-config:ext_exe}\"\n
           let architecture = \"%{ocaml-config:architecture}\"\n
           let host = \"%{ocaml-config:host}\"\n
           let target = \"%{ocaml-config:target}\"\n
           let system = \"%{ocaml-config:system}\"\n
           let ocamlopt_cflags = \"%{ocaml-config:ocamlopt_cflags}\"\n
           let native_c_compiler = \"%{ocaml-config:native_c_compiler}\"\n
           let native_c_libraries = \"%{ocaml-config:native_c_libraries}\""))))

