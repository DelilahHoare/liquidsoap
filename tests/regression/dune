; Regenerate using dune build @gendune --auto-promote

(include dune.inc)

(rule
 (alias gendune)
 (deps
  (source_tree .))
 (target dune.inc.gen)
 (action
  (with-stdout-to
   dune.inc.gen
   (run ../gen_dune.exe))))

(rule
 (alias gendune)
 (action
  (diff dune.inc dune.inc.gen)))

(rule
 (alias runtest)
 (package liquidsoap)
 (deps
  (:server_port ./server_port.sh)
  (:liquidsoap ../../src/bin/liquidsoap.exe)
  (:run_test ../run_test.sh))
 (action
  (run %{run_test} "./%{server_port} %{liquidsoap}" %{server_port})))
